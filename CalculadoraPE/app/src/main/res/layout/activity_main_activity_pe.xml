<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.calculadorape.MainActivityPE"
    android:weightSum="1"
    android:background="#65b0ff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:autoText="false"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:textColor="#3d3d3d"
        android:textAlignment="textEnd"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="italic" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/linearLayout2">

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/btn_numero7"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/btn_numero8"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="9"
            android:id="@+id/btn_numero9"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="x"
            android:id="@+id/btn_operadormulti"
            android:background="#26b97e"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/btn_numero4"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/btn_numero5"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/btn_numero6"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/btn_operadorresta"
            android:text="-"
            android:background="#26b97e"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/btn_numero1"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/btn_numero2"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/btn_numero3"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/btn_operadorsuma"
            android:text="+"
            android:background="#26b97e"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Acerca"
            android:id="@+id/btn_Acerca"
            android:background="#26b97e"
            android:textColor="#ffffff"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/btn_numero0"
            android:background="#6de3b4"
            android:textStyle="italic" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/btn_operadorigual"
            android:text="="
            android:background="#26b97e"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
